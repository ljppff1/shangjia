        <item name="android:textSize">16sp</item>
    </style>
    <style name="text2x">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
    </style>
     <style name="text2d">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
     <style name="text24">
