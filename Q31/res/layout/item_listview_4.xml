<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
  >
  <LinearLayout 
      android:id="@+id/mLL1"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <TextView 
               android:layout_width="0dp"
               android:layout_weight="3"
               android:layout_height="wrap_content"
               android:id="@+id/mTv1"
               android:gravity="center"
               style="@style/text24"
               android:text="@string/c10"
               />
      <TextView 
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:id="@+id/mTv2"
               style="@style/text24"   android:gravity="center"
               android:text="@string/c10"
               />
            <TextView 
               android:layout_width="0dp"
               android:layout_weight="2"   android:gravity="center"
               android:layout_height="wrap_content"
               android:id="@+id/mTv3"
               style="@style/text24"
               android:text="@string/c10"
               />
            <RelativeLayout 
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:layout_weight="3"
          >
          <RelativeLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              >
                            <Button 
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:layout_marginRight="4dp"
                  android:layout_alignParentRight="true"
                  android:id="@+id/mBtn2"
                 android:focusable="false"
                  android:layout_centerVertical="true"
                  android:background="@drawable/dd1"
                  />
                            <TextView 
               android:layout_width="20dp"
               android:layout_height="wrap_content"
               android:id="@+id/mTv5"       
               style="@style/text24"                   android:layout_centerInParent="true"
               
               android:text="@string/c11"
               />
                            
              <Button 
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:id="@+id/mBtn1"
                  android:focusable="false"
                  android:layout_marginLeft="4dp"
                android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:background="@drawable/dd"
                  />
              
          </RelativeLayout>
      </RelativeLayout>
            
  </LinearLayout>
        <ImageView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/x2"
            android:layout_below="@id/mLL1"
            />
  
</RelativeLayout>