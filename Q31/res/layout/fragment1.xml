<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/mRlcg1"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical" >    <RelativeLayout        android:id="@+id/mRl13"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:background="@drawable/title1" >        <TextView            android:id="@+id/mTvc"            style="@style/text1"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:text="@string/c6" />        <RelativeLayout            android:id="@+id/mRl2"            android:layout_width="50dp"            android:layout_height="fill_parent"            android:layout_alignParentRight="true"            android:padding="10dp" >        </RelativeLayout>    </RelativeLayout>    <com.example.view.TabPageIndicator        android:id="@+id/indicator"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:layout_below="@id/mRl13"        android:background="@drawable/tab_unselected_pressed_example" />    <android.support.v4.view.ViewPager        android:id="@+id/pager"        android:layout_width="fill_parent"        android:layout_height="fill_parent"        android:layout_below="@id/indicator" /></RelativeLayout>